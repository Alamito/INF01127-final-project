generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserType {
  employee
  stranger
  associated
}

model User {
  id         Int          @id @default(autoincrement())
  name       String
  last_name  String
  email      String       @unique
  password   String
  type       UserType
}

model Restaurants {
  id         Int          @id @default(autoincrement())
  name       String
  total_tables Int
  tables_reserved Int     @default(0)
  available Boolean       @default(true)
  source_image String
}
